{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug eMIPS (WSL)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/eMIPS",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "args": [],

      "preLaunchTask": "build eMIPS",

      "MIMode": "gdb",
      "pipeTransport": {
        "pipeProgram": "C:\\Windows\\System32\\wsl.exe",
        "pipeArgs": [],
        "debuggerPath": "/usr/bin/gdb"
      },

      "externalConsole": false,
      "setupCommands": [
        {
          "description": "Enable prettyâ€‘printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],

      /* if your project lives on a drive other than C:, add more mappings */
      "sourceFileMap": {
        "/mnt/c": "C:\\"
      }
    }
  ]
}
